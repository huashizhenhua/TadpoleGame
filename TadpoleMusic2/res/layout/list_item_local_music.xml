<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent" >

    <TextView
        android:id="@+id/text_view_section_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="@color/powderblue"
        android:paddingLeft="8dp"
        android:textAppearance="@style/TextAppearance.Large"
        android:visibility="gone" />

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/text_view_section_title"
        android:layout_centerVertical="true"
        android:background="@color/white"
        android:descendantFocusability="blocksDescendants"
        android:paddingBottom="10dp"
        android:paddingTop="10dp" >

        <ImageView
            android:id="@+id/image_view_select"
            android:layout_width="10dp"
            android:layout_height="44dp"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:background="@color/powderblue"
            android:paddingBottom="3dp"
            android:paddingTop="3dp"
            android:visibility="invisible" >
        </ImageView>

        <TextView
            android:id="@+id/text_view_music_title"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:layout_toRightOf="@+id/image_button_operation"
            android:paddingLeft="16dp"
            android:textAppearance="@style/TextAppearance.Medium"
            android:textColor="@color/black" />

        <ImageView
            android:id="@+id/image_view_icon"
            android:layout_width="wrap_content"
            android:layout_height="5dp"
            android:paddingLeft="8dp"
            android:visibility="gone" />

        <ImageButton
            android:id="@+id/image_button_operation"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:background="@color/transparent"
            android:src="@android:drawable/ic_menu_slideshow" />
    </RelativeLayout>

</RelativeLayout>