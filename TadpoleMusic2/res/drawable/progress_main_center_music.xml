<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item android:id="@android:id/background">
        <shape>
            <corners android:radius="5dip" />

            <gradient
                android:angle="270"
                android:centerColor="@color/simple_white_trans22"
                android:centerY="0.75"
                android:endColor="@color/simple_white_trans22"
                android:startColor="@color/simple_white_trans22" />
        </shape>
    </item>
    <item android:id="@android:id/secondaryProgress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="@color/simple_white_transCC"
                    android:centerY="0.75"
                    android:endColor="@color/simple_white_transCC"
                    android:startColor="@color/simple_white_transCC" />
            </shape>
        </clip>
    </item>
    <item android:id="@android:id/progress">
        <clip>
            <shape>
                <corners android:radius="5dip" />

                <gradient
                    android:angle="270"
                    android:centerColor="@color/simple_orange"
                    android:centerY="0.75"
                    android:endColor="@color/simple_orange"
                    android:startColor="@color/simple_orange" />
            </shape>
        </clip>
    </item>

</layer-list>