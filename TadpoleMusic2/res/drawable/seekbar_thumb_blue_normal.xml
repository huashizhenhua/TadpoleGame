<?xml version="1.0" encoding="utf-8"?>
<layer-list xmlns:android="http://schemas.android.com/apk/res/android" >

    <item>
        <shape android:shape="oval" >
            <solid android:color="@color/transparent" />

            <padding
                android:bottom="@dimen/seekbar_thumb_padding_medium"
                android:left="@dimen/seekbar_thumb_padding_medium"
                android:right="@dimen/seekbar_thumb_padding_medium"
                android:top="@dimen/seekbar_thumb_padding_medium" />
        </shape>
    </item>
    <item>
        <shape android:shape="oval" >
            <solid android:color="@color/simple_blue" />

            <size
                android:height="@dimen/seekbar_thumb_size_medium"
                android:width="@dimen/seekbar_thumb_size_medium" >
            </size>
        </shape>
    </item>

</layer-list>