<resources>
    <!--	   -->
	<!-- attrs -->
	<!--	   -->
	<!-- PageIndicator related attributes -->
	<attr name="tdPageIndicatorStyle" format="reference" />


	<!--			-->
	<!-- Styleables -->
	<!--			-->

	<declare-styleable name="PageIndicator">
		<attr name="dotCount" format="integer" />
		<attr name="activeDot" format="integer" />
		<attr name="dotDrawable" format="reference" />
		<attr name="dotSpacing" format="dimension" />
		<attr name="gravity">
			<flag name="top" value="0x30" />
			<flag name="bottom" value="0x50" />
			<flag name="left" value="0x03" />
			<flag name="right" value="0x05" />
			<flag name="center_vertical" value="0x10" />
			<flag name="center_horizontal" value="0x01" />
			<flag name="center" value="0x11" />
		</attr>
		<attr name="dotType">
			<enum name="single" value="0" />
			<enum name="multiple" value="1" />
		</attr>
    </declare-styleable>
    
	<declare-styleable name="FlingGalleryView">
		<attr name="defaultScreen" format="integer" />
    </declare-styleable>
    
</resources>
