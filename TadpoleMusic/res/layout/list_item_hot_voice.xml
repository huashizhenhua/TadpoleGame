<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tp_list_item_size"
    android:minHeight="@dimen/tp_list_item_size" >

    <TextView
        android:id="@+id/text_view_section_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cccccc"
        android:paddingLeft="@dimen/tp_padding_medium"
        android:textAppearance="@style/TextAppearance.Medium"
        android:textColor="@color/black"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text_view_section_title"
        android:background="@drawable/selector_setting_item_bg_normal"
        android:descendantFocusability="blocksDescendants"
        android:paddingLeft="@dimen/tp_padding_medium" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent" >

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_centerVertical="true"
                android:layout_marginRight="84dp" 
                android:orientation="vertical">

                <TextView
                    android:id="@+id/text_view_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:gravity="center_vertical"
                    android:paddingLeft="@dimen/tp_padding_medium"
                    android:singleLine="true"
                    android:text="zhenby is a sb"
                    android:textAppearance="@style/TextAppearance.Large"
                    android:textColor="@color/tp_title_text_color" />

                <TextView
                    android:id="@+id/text_view_tags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/text_view_title"
                    android:paddingLeft="@dimen/tp_padding_medium"
                    android:gravity="center_vertical"
                    android:singleLine="true"
                    android:textAppearance="@style/TextAppearance.Small"
                    android:textColor="@color/tp_summary_text_color" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/btn_share"
                    android:layout_width="@dimen/tp_list_item_size"
                    android:layout_height="@dimen/tp_list_item_size"
                    android:padding="@dimen/tp_padding_medium"
                    android:src="@android:drawable/ic_menu_share" />

                <ImageButton
                    android:id="@+id/btn_collect"
                    android:layout_width="@dimen/tp_list_item_size"
                    android:layout_height="@dimen/tp_list_item_size"
                    android:background="@color/transparent"
                    android:padding="@dimen/tp_padding_medium"
                    android:src="@drawable/btn_favorite_default" >
                </ImageButton>

                <ImageView
                    android:id="@+id/btn_delete"
                    android:layout_width="@dimen/tp_list_item_size"
                    android:layout_height="@dimen/tp_list_item_size"
                    android:background="@color/transparent"
                    android:padding="@dimen/tp_padding_medium"
                    android:src="@android:drawable/ic_menu_delete"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>