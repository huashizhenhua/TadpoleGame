<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="@dimen/tp_list_item_size"
    android:minHeight="@dimen/tp_list_item_size" >

    <TextView
        android:id="@+id/text_view_section_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:background="#cccccc"
        android:paddingLeft="8dp"
        android:text="hello world"
        android:textSize="@dimen/section_title_text_size"
        android:visibility="gone" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@+id/text_view_section_title"
        android:paddingLeft="8dp" >

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:background="@drawable/bg_list_select"
            android:descendantFocusability="blocksDescendants" >

            <RelativeLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="84dp" >

                <TextView
                    android:id="@+id/text_view_title"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:singleLine="true"
                    android:text="zhenby is a sb"
                    android:textColor="@color/black"
                    android:textSize="22sp" />

                <TextView
                    android:id="@+id/text_view_tags"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_alignParentLeft="true"
                    android:layout_below="@+id/text_view_title"
                    android:singleLine="true"
                    android:text="zhenby is a sb" />
            </RelativeLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentRight="true"
                android:layout_centerVertical="true"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/btn_share"
                    android:layout_width="@dimen/tp_list_item_size"
                    android:layout_height="@dimen/tp_list_item_size"
                    android:padding="@dimen/tp_padding_medium"
                    android:src="@android:drawable/ic_menu_share" />

                <ImageButton
                    android:id="@+id/btn_collect"
                    android:layout_width="@dimen/tp_list_item_size"
                    android:layout_height="@dimen/tp_list_item_size"
                    android:background="@color/transparent"
                    android:padding="@dimen/tp_padding_medium"
                    android:src="@drawable/btn_favorite_default" >
                </ImageButton>

                <ImageView
                    android:id="@+id/btn_delete"
                    android:layout_width="@dimen/tp_list_item_size"
                    android:layout_height="@dimen/tp_list_item_size"
                    android:background="@color/transparent"
                    android:padding="@dimen/tp_padding_medium"
                    android:src="@android:drawable/ic_menu_delete"
                    android:visibility="gone" />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</RelativeLayout>